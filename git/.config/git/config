[alias]
  bare-clone = !git_bare_clone
  branch-name = !git rev-parse --abbrev-ref HEAD
  default-branch = !awk -F'/' '{print $NF}' .git/refs/remotes/origin/HEAD

  exclude = !$EDITOR .git/info/exclude
  ; hidden = !git ls-files -v | grep \"^[a-z]\"
  ; hide = update-index --assume-unchanged
  ignored = !git status -s --ignored | grep \"^!!\"
  ; unhide = update-index --no-assume-unchanged
  ; unhide-all = update-index --really-refresh

  publish = !git push -u origin $(git branch-name)
  unpublish = !git push origin :$(git branch-name)

  files-changed = !git diff --name-only $(git merge-base HEAD $(git default-branch))
  diff-main = !git diff $(git merge-base HEAD $(git default-branch))
  review = "!f() { $EDITOR ${@:-$(git files-changed)}; }; f"
  stat = !git diff --stat $(git merge-base HEAD $(git default-branch))
[color]
  ui = auto
[commit]
  verbose = true
[core]
  autocrlf = input
  excludesfile = ~/.config/git/global_gitignore
  pager = delta
[delta]
  light = false
  navigate = true  # use n and N to move between diff sections
  side-by-side = false
  line-numbers = true
  syntax-theme = base16
[diff]
  tool = nvim
  colorMoved = default
[difftool]
  prompt = false
  keepBackup = false
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[difftool "nvim"]
  cmd = nvim -c DiffviewOpen
[fetch]
  prune = true
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[filter "media"]
  clean = git media clean %f
  smudge = git media smudge %f
  required = true
[merge]
  conflictstyle = diff3
  ff = false
  tool = nvim
[mergetool]
  prompt = false
[mergetool "nvim"]
  cmd = nvim -c DiffviewOpen
[pull]
  rebase = true
[push]
  default = simple
[rebase]
  autosquash = true
[user]
  name = David Marchante
  email = davidmarchan@gmail.com
