#!/usr/bin/env bash

fzf_command() {
  fzf \
    --prompt="‚ùØ " \
    --gutter=" " \
    --info=hidden \
    --reverse \
    --bind="j:down,k:up,q:abort" \
    --no-preview
}

action=$(printf "suspend\nshutdown\nreboot\nlogout" | fzf_command) || exit 0

case $action in
"logout") loginctl terminate-user david ;;
"reboot") systemctl reboot ;;
"shutdown") systemctl poweroff ;;
"suspend") systemctl suspend ;;
esac
