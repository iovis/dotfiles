#!/usr/bin/env bash

set -euo pipefail

fd_command() {
  fd \
    --type d \
    --max-depth 3 \
    --exclude node_modules \
    --exclude public \
    --exclude src \
    --exclude target \
    . \
    "$HOME" \
    "/run/media/$USER"
}

INITIAL_QUERY="${*:-}"
fzf_command() {
  fzf \
    --prompt="‚ùØ " \
    --header-border \
    --input-border \
    --list-border \
    --info=hidden \
    --reverse \
    --multi \
    --bind='enter:become(setsid -f nautilus {+})' \
    --bind=alt-p:toggle-preview \
    --bind='alt-r:change-preview-window(down|right)' \
    --preview="fzf-preview {}" \
    --preview-window=right \
    --color=input-border:blue \
    --query="$INITIAL_QUERY"
}

fd_command | fzf_command; exit
